
@{
    ViewBag.Title = "Index";
    bool IsLoggedIn = (bool)Session["LoginStatus"];
}

<h2>Index</h2>

@if (!IsLoggedIn)
{
    <div class="container">
        <form action="/Default/Index" method="post">
            <div class="row">
                <label class="col-md-2" for="username">Username:</label>
                <input class="col-md-6" type="text" name="username" placeholder="username" value="@Request["username"]" />
            </div>
            <div class="row">
                <label class="col-md-2" for="password">Password:</label>
                <input class="col-md-6" type="password" name="password" placeholer ="password" value="@Request["password"]" />
            </div>
            <button type="submit">Log in</button>
        </form>
        <a href="/Default/CreateAccount">Create new account</a>
    </div>
}
else
{
    <p>Du är inloggad som: <strong>@Session["username"]</strong></p>

    <form action="" method="post">
        <button type="submit" name="logoutButton">Log out</button>
    </form>
}

