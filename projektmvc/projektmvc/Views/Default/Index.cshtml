
@{
    ViewBag.Title = "Index";
    bool IsLoggedIn = (bool)Session["LoginStatus"];
}

<h2>Index</h2>

@if (!IsLoggedIn)
{
    <div class="container">
        <form action="/Default/Index" method="post">
            <div class="row">
                <label class="col-md-2" for="username">Användarnamn:</label>
                <input class="col-md-6" type="text" name="username" placeholder="användarnamn" value="@Request["username"]" />
            </div>
            <div class="row">
                <label class="col-md-2" for="password">Lösenord:</label>
                <input class="col-md-6" type="text" name="password" value="@Request["password"]" />
            </div>
            <button type="submit">Logga in</button>
        </form>
    </div>
}
else
{
    <p>Du är inloggad som: <strong>@Session["username"]</strong></p>

    <form action="" method="post">
        <button type="submit" name="logoutButton">Logga ut</button>
    </form>
}

